<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.valdemar.spook.ui.home.HomeFragment"
        android:label="Principal"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_send"
        android:name="com.valdemar.spook.ui.send.SendFragment"
        android:label="Publicar historia"
        tools:layout="@layout/fragment_send" />


    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.valdemar.spook.ui.gallery.CreacionesFragment"
        android:label="Mis Creaciones"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.valdemar.spook.ui.slideshow.SlideshowFragment"
        android:label="Mis Favoritos"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="com.valdemar.spook.ui.slideshow.ChatFragment"
        android:label="Chat grupal"
        tools:layout="@layout/fragment_chat" />


    <fragment
        android:id="@+id/nav_config"
        android:name="com.valdemar.spook.ui.config.ConfigFragment"
        android:label="Configuración"
        tools:layout="@layout/fragment_chat_style" />


    <fragment
        android:id="@+id/nav_share"
        android:name="com.valdemar.spook.ui.ShareFragment"
        android:label="Compartir"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.valdemar.spook.ui.LogoutFragment"
        android:label="Cerrar Sesión"
        tools:layout="@layout/fragment_slideshow" />

</navigation>
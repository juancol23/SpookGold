<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/black">

        <TextView
            android:id="@+id/name_modal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¿No puedes Acceder?"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/modal_need_text_body"
            android:layout_width="0dp"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Para esta caracteristica necesitas iniciar sesión o registrarse."
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/name_modal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/modal_need_text_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgMeme"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/imgMeme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/modal_bloquear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bloquear Usuario"
                    android:background="@drawable/design_one"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:id="@+id/modal_need_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/design_one"
                    android:textColor="@color/white"
                    android:text="Enviar Mensaje"
                    android:layout_weight=".5"/>

            </LinearLayout>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
